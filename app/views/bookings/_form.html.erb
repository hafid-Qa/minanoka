<div data-controller="total">
  <%= simple_form_for [@field, @booking], data: {turbo: false} ,  data: { action: "change->total#amount" } do |f| %>
    <%= f.input :date_from , data: { target: 'total.startDate' } %>
    <%= f.input :date_to , data: { target: 'total.endDate' } %>
    <hr>
    <div class="mb-3">
      <h3>Price per day: ¥<%= number_to_currency(@field.price, unit: "", precision: 0) %> </h3>
      <!-- <h3>Total price: ¥<%= number_to_currency(@field.price, unit: "", precision: 0) %> </h3> -->
    </div>
    <%#= f.input :price_per_day, input_html: { :value => @field.price, readonly: true }  %>
    <div class="d-flex">
      <%= f.submit 'Request Booking', class: "btn btn-primary btn-lg flex-grow-1" %>
    </div>
  <% end %>
</div>
