<div data-controller="total">
  <%= simple_form_for booking, data: {turbo: false} ,  data: { action: "change->total#amount" } do |f| %>
    <%= f.input :date_from , data: { target: 'total.startDay' }, html5: true %>
    <%= f.input :date_to , data: { target: 'total.endDate' }, html5: true %>
    <hr>
    <div class="mb-3">
      <h3 data-total-price-value='<%= booking.field.price %>' >Price per day: Â¥<%= number_to_currency(booking.field.price, unit: "", precision: 0) %> </h3>
    </div>
    <div class="d-flex">
      <%= f.submit 'Change dates', class: "btn btn-primary btn-lg flex-grow-1" %>
    </div>
  <% end %>
</div>
