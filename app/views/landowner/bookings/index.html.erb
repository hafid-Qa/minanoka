<div class="container my-5 booking-container">
  <h1>Welcome back, <%= current_user.name %>!</h1>
  <h3>You have <%= pluralize(@bookings.count, 'request') %>.</h3>
  <div class="cards-booking mt-4">
    <% @bookings.each do |booking| %>
      <%= render 'bookings/card', booking: booking %>
    <% end %>
  </div>
  <hr class="my-5">
  <div class="row align-items-end">
    <div class="col">
      <h3>You have <%= pluralize(current_user.fields.count, 'field') %>.</h3>
    </div>
    <div class="col">
      <% if current_user.name == "" || current_user.name.nil? %>
        <%= link_to 'Add a field', edit_user_registration_path, class:"btn btn-secondary float-end" %></div>
    <% else %>
      <%= link_to 'Add a field', new_field_path, class:"btn btn-secondary float-end" %></div>
  <% end %>
</div>
<div class="row mt-2 gy-3">
  <% current_user.fields.each do |field| %>
    <div class="col-12 col-md-6">
      <%= render 'fields/card', field: field %>
    </div>
  <% end %>
</div>
</div>
