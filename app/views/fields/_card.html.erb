<div class="card card-field text-white card-has-bg click-col" style="background-image:url(<%= field.images.first.key ? cl_image_path(field.images.first.key) : image_url('https://images.unsplash.com/photo-1573351106568-7c0784fb6456?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=640&q=80') %>);">
  <div class="card-img-overlay d-flex flex-column">
    <div class="card-body-field">
      <div class="d-flex justify-content-between">
        <h3 class="card-title mt-0 text-white"><%= field.name %></h3>
        <% if field.avg_rating && field.avg_rating > 3.8 %>
          <span class="badge bg-light text-primary nice-pick"><i class="fa-solid fa-wheat-awn"></i> Nice pick</span>
        <% end %>
      </div>
      <p class="text-white"><i class="fa-solid fa-location-dot"></i> <%= field.location %></p>
    </div>
    <div class="card-footer-field">
      <div class="d-flex justify-content-between">
        <h3 class="text-white mb-0">Â¥ <%= number_to_currency(field.price, unit: "", precision: 0) %>/day</h3>
        <% if field.avg_rating %>
          <h3 class="text-white mb-0">ðŸ¥• <%= field.avg_rating %></h3>
        <% end %>
      </div>
      <%= link_to '', field_path(field), class: 'card-link'  %>
    </div>
  </div>
</div>
